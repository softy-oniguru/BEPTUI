{
  "name": "bertui",
  "version": "1.1.1",
  "description": "Lightning-fast React dev server powered by Bun and Elysia - Now with TypeScript support!",
  "type": "module",
  "main": "./index.js",
  "types": "./types/index.d.ts",
  "bin": {
    "bertui": "./bin/bertui.js"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./index.js"
    },
    "./styles": "./src/styles/bertui.css",
    "./logger": "./src/logger/logger.js",
    "./router": {
      "types": "./types/router.d.ts",
      "default": "./src/router/Router.jsx"
    },
    "./config": {
      "types": "./types/config.d.ts",
      "default": "./src/config/loadConfig.js"
    }
  },
  "files": [
    "bin",
    "src",
    "types",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun bin/bertui.js dev",
    "build": "bun bin/bertui.js build",
    "test": "cd test-app && bun run dev"
  },
  "keywords": [
    "react",
    "bun",
    "dev-server",
    "vite-alternative",
    "elysia",
    "build-tool",
    "bundler",
    "fast",
    "hmr",
    "file-based-routing",
    "typescript",
    "seo",
    "sitemap",
    "server-islands"
  ],
  "author": "Pease Ernest",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BunElysiaReact/BERTUI.git"
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "ernest-logger": "latest",
    "lightningcss": "^1.30.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^19.2.3",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}